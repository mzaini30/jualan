---
import Layout from './__layout.astro'

const data = [
	{gambar: 'https://www.nusabali.com/article_images/54792/permintaan-beras-organik-tinggi-2019-07-01-135724_0.jpg', judul: 'Beras', harga: 12000},
	{gambar: 'https://luxofood.sgp1.digitaloceanspaces.com/2019/02/nangka-mateng.jpg', judul: 'Nangka', harga: 30000},
	{gambar: 'https://bonanza-beef.co.id/wp-content/uploads/2016/11/Bakso-Kuah.jpg', judul: 'Bakso', harga: 10000},
	{gambar: 'https://fanssea.searca.org/images/pages/news/2018/01-jan/indonesias-fermented-superfood-9.jpg', judul: 'Tempe', harga: 5000},
	{gambar: 'https://www.tokoindonesia.co.uk/wp-content/uploads/2020/02/atahugoreng.png', judul: 'Tahu', harga: 2000},
	{gambar: 'http://4.bp.blogspot.com/-my_fGyrn3Qk/VAfCamEi_wI/AAAAAAAAARA/wMqJ1oY6ZPs/s1600/Kelapa%2BHijau.png', judul: 'Kelapa', harga: 15000},
	{gambar: 'https://i.ytimg.com/vi/eYfDwAuTY_E/hqdefault.jpg', judul: 'Es Teler', harga: 20000},
]
---

<Layout>
	<div class="konten">
		<marquee behavior="" direction="">Pengumuman... Mulai Desember 2021, semua bahan makanan diskon 30%..</marquee>
		<h1>Jualan Sembako</h1>
		<p class='deskripsi'>Toko sembako Serba Murah, depan pasar pagi. HP: 081234567890</p>
		<p class='list-harga'>List Harga Barang</p>
		<div class="dagangan">
			
			{data.map(x => <div>
				<div class="barangnya">
					<img src={x.gambar} alt="">
					<div class="keterangan">
						<p class='judul'>{x.judul}</p>
						<p class='harga'>Rp {Number(x.harga).toLocaleString('id')}</p>
					</div>
				</div>
			</div>)}

		</div>
	</div>
	<!--  width="0.88em" height="1em" -->
	<a href="https://wa.me/6281234567890">
