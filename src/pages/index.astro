	</a>
</Layout>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Pacifico&display=swap');

	marquee {
		@apply bg-yellow-500 text-white py-1
	}
	h1 {
		font-family: 'Pacifico', cursive;		
		@apply text-center text-3xl text-violet-800 my-5
	}
	.deskripsi {
		@apply text-center px-3 pb-6 italic text-sm
	}
	.list-harga {
		@apply text-center outline outline-blue-500 mb-5
	}
	.dagangan {
		@apply grid grid-cols-5 <md:grid-cols-2 mx-10 gap-5
	}
	.barangnya {
		@apply rounded border bg-light-500 shadow overflow-hidden
	}
	.wa {
		@apply w-10 text-green-600 fixed bottom-2 right-2
	}
	.keterangan {
		@apply p-2
	}
	.judul {
		@apply text-xl
	}
	.harga {
		@apply text-sm text-yellow-700 bg-yellow-200 border border-yellow-700 inline-block px-2 py-1 mt-2 rounded
	}
	.konten {
		@apply bg-gray-200 min-h-screen pb-5
	}
</style>